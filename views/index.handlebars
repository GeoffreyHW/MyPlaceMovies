<div style="align-items: center">
  <div class="container">
    <form style = 'float: left; padding: 5px;' method="post" action="/api/movies">
        <label>Movie Title</label>
        <input type="text" name="movie">
        <label>Score</label>
        <input type="text" name="score">
        <label>Thoughts</label>
        <input type = "textarea" name = "thoughts">
      <button type="submit" id="addButton" onClick = "window.location.reload()">Add Movie</button>
    </form>
  </div>
  <div class="container">
    {{#if movies}}
        {{#each movies}}
        <div class="card" style="margin: auto; width: 400px; height: 100px; margin-bottom:10px;">
            <p>{{this.title}}: {{this.score}}</p>
            {{this.thoughts}}
        </div>
        {{/each}}
    {{/if}}
  </div>
</div>

